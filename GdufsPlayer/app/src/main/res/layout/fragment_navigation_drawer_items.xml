<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e2e2e2"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/menu_item_video_res"
        style="@style/MenuItemLayoutStyle">
        <ImageView
            style="@style/MenuItemImageViewStyle"
            android:background="@mipmap/drawer_menu_icon_quest_nor"
            android:contentDescription="@null" />
        <TextView
            style="@style/MenuItemTextViewStyle"
            android:gravity="center"
            android:text="@string/menu_video_res" />
        <View
            style="@style/h_line" />

        <LinearLayout
            android:id="@+id/menu_item_video_download"
            style="@style/MenuItemLayoutStyle" >

            <ImageView
                style="@style/MenuItemImageViewStyle"
                android:background="@mipmap/drawer_menu_icon_opensoft_nor"
                android:contentDescription="@null" />

            <TextView
                style="@style/MenuItemTextViewStyle"
                android:text="@string/menu_video_download" />
        </LinearLayout>

        <View
            style="@style/h_line"
            android:layout_width="wrap_content" />

        <LinearLayout
            android:id="@+id/menu_item_video_local"
            style="@style/MenuItemLayoutStyle" >

            <ImageView
                style="@style/MenuItemImageViewStyle"
                android:background="@mipmap/drawer_menu_icon_blog_nor"
                android:contentDescription="@null" />

            <TextView
                style="@style/MenuItemTextViewStyle"
                android:text="@string/menu_video_local" />
        </LinearLayout>

        <View
            style="@style/h_line" />

        <LinearLayout
            android:id="@+id/menu_item_my_hobby"
            style="@style/MenuItemLayoutStyle" >

            <ImageView
                style="@style/MenuItemImageViewStyle"
                android:background="@mipmap/drawer_menu_icon_gitapp_nor"
                android:contentDescription="@null" />

            <TextView
                style="@style/MenuItemTextViewStyle"
                android:text="@string/menu_my_hobby" />
        </LinearLayout>

        <View
            style="@style/h_line" />
        <LinearLayout
            android:id="@+id/menu_item_history_record"
            style="@style/MenuItemLayoutStyle" >

            <ImageView
                style="@style/MenuItemImageViewStyle"
                android:background="@mipmap/drawer_menu_icon_gitapp_nor"
                android:contentDescription="@null" />

            <TextView
                style="@style/MenuItemTextViewStyle"
                android:text="@string/menu_history_record" />
        </LinearLayout>

        <View
            style="@style/h_line" />




    </LinearLayout>
    
</LinearLayout>
